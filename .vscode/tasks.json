{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run MCP Server",
      "type": "shell",
      "command": "${workspaceFolder}/src/.venv/bin/python",
      "args": [
        "src/app.py"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "${workspaceFolder}/src/.venv/bin/python",
      "args": [
        "-m",
        "unittest",
        "discover",
        "-s",
        "tests",
        "-p",
        "test*.py",
        "-v"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}